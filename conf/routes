# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

*      /                                        module:secure

GET     /                                       Application.index


GET     /favicon.ico                            404

GET     /towers                                 Towers.all
POST    /towers                                 Towers.create
PUT     /towers                                 Towers.edit
DELETE  /towers/{id}                            Towers.delete

GET     /freqs                                  Freqs.all
POST    /freqs                                  Freqs.create
PUT     /freqs                                  Freqs.edit
DELETE  /freqs/{id}                             Freqs.delete

GET     /client/                                staticDir:client
GET     /public/                                staticDir:public
GET     /css/                                   staticDir:css

*       /{controller}/{action}                  {controller}.{action}
